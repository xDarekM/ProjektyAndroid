<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/ic_instagram_2"
        android:layout_marginTop="30dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/login"
            android:layout_toRightOf="@+id/login"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginRight="70dp"/>

        <TextView
            android:id="@+id/haslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:text="hasło"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/haslo"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/haslo"
            android:layout_marginRight="70dp"



            />
        <TextView
            android:id="@+id/powtorzhaslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haslo"
            android:text="powtórz\nhasło"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/powtorzhaslo"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/powtorzhaslo"
            android:layout_marginRight="70dp"

            />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/powtorzhaslo"
            android:text="email"


            />
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/email"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@+id/email"

            />
        <TextView
            android:id="@+id/numertel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:text="numer\ntel."

            />
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/numertel"
            android:inputType="phone"
            android:layout_toRightOf="@+id/numertel"

            />


    </RelativeLayout>
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rejestruj"/>

</LinearLayout>